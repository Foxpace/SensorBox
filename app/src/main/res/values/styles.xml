<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <item name="preferenceTheme">@style/CustomTheme.PreferenceThemeOverlay</item>
        <item name="font">@font/roboto_regular</item>
        <item name="fontFamily">@font/roboto_family</item>
        <item name="md_font_title">@font/roboto_regular</item>
        <item name="md_font_body">@font/roboto_regular</item>

        <item name="android:actionButtonStyle">@style/ActionButtonStyle</item>
        <item name="md_font_button">@font/roboto_regular</item>
        <item name="md_background_color">@color/colorPrimary</item>
        <item name="md_color_button_text">@color/colorWhite</item>
        <item name="md_color_title">@color/colorWhite</item>
        <item name="md_color_content">@color/colorWhite</item>
<!--        <item name="android:alertDialogStyle">@style/MyAlertDialogStyle</item>-->
    </style>

    <style name="ActionButtonStyle" parent="@android:style/Widget.Holo.Light.ActionButton">
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <style name="CustomTheme.PreferenceThemeOverlay" parent="@style/PreferenceThemeOverlay">
        <item name="android:layout">@layout/pref_screen</item>
        <item name="preferenceStyle">@style/custom_preference</item>
<!--        <item name="editTextPreferenceStyle">@style/custom_preference</item>-->
<!--        <item name="dialogPreferenceStyle">@style/custom_preference</item>-->
<!--        <item name="android:dialogLayout">@layout/preference_dialog_edittext</item>-->
<!--        <item name="android:positiveButtonText">@string/ok</item>-->
<!--        <item name="android:negativeButtonText">@string/cancel</item>-->


<!--        <item name="switchPreferenceCompatStyle">@style/custom_preference_switch</item>-->

    </style>

    <style name="custom_preference">
        <item name="android:layout">@layout/pref_preference</item>
        <item name="allowDividerAbove">false</item>
        <item name="allowDividerBelow">true</item>
        <item name="singleLineTitle">false</item>
        <item name="iconSpaceReserved">true</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="font">@font/roboto_regular</item>
        <item name="fontFamily">@font/roboto_family</item>
        <item name="md_color_button_text">@color/colorWhite</item>
        <item name="md_font_title">@font/roboto_regular</item>
        <item name="md_font_body">@font/roboto_regular</item>
        <item name="md_font_button">@font/roboto_regular</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

</resources>